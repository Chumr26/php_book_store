# BookStore .htaccess Configuration
# Enable mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Set the base path (Use / for Render/Production, /book_store/ for XAMPP if needed)
    # RewriteBase /book_store/
    RewriteBase /
    
    # Handle /admin (case insensitive) redirection to Admin directory
    RewriteRule ^admin/?$ Admin/ [NC,L]

    # Allow static resources (CSS, JS, images) in Content directory
    RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|webp)$ [NC]
    RewriteRule ^ - [L]
    
    # Prevent direct access to certain directories (except Content for static files)
    RewriteRule ^(Model|Controller)/ - [F]
    
    # Rewrite requests to index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php?page=$1 [QSA,L]
</IfModule>

# Security headers - Block direct PHP access
<FilesMatch "\.php$">
    Deny from all
</FilesMatch>

# Allow specific PHP files
<FilesMatch "^(index|test_connection)\.php$">
    Allow from all
</FilesMatch>

# Allow static resources (CSS, JS, images)
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|webp)$">
    Allow from all
</FilesMatch>

# Disable directory listing
Options -Indexes

# Set proper MIME types
AddType application/x-httpd-php .php

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
